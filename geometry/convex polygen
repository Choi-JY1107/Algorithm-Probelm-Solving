#include <stdio.h>
#include <utility>
#include <vector>
#include <stack>
#include <cmath>
#include <algorithm>
using namespace std;

pair <int, int> p;
vector <pair<int, int> > v;
vector <pair<int, float> > c;
stack <pair<int, int> > s;

bool compare(pair<int, float> start, pair<int, float> end){
	return start.second > end.second;
}

float findCos(int i){
	float x,y;
	x = v.at(i).first - s.top().first;
	y = v.at(i).second - s.top().second;
	
	return x/sqrt(pow(x,2)+pow(y,2));
}

int main() {
	int n;
	scanf("%d",&n);
	
	for(int i=0;i<n;i++){
		scanf("%d %d",&p.first, &p.second);
		if(s.empty()) s.push(p);
		else if(s.top().second>p.second ||
				(s.top().first > p.first &&
				 s.top().second == p.second)){
			s.pop();
			s.push(p);
		}
		v.push_back(p);
	}
	
	for(int i=0;i<n;i++){
		if(s.top() ==  v.at(i)) continue;
		c.push_back(make_pair(i,findCos(i)));
	}
	
	sort(c.begin(),c.end(),compare);
	
	for(int i=0;i<c.size();i++){
		printf("%d %lf\n",c.at(i).first, c.at(i).second);
	}
	
	return 0;
}

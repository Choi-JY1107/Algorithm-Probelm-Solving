#include <stdio.h>
#include <utility>
#include <vector>
#include <stack>
#include <cmath>
#include <algorithm>
#define PI 3.141592
using namespace std;

pair <int, int> p;
vector <pair<int, int> > v;
vector <pair<int, float> > c;
stack <pair<int, float> > s;
int ans=0;

bool checkClock(float now){
	float pre = s.top().second;
	if(pre < PI){
		//printf("*\ncompare %lf and %lf : %d\n*\n",pre*180/PI,now*180/PI,(pre<now && pre+PI>now));
		if(pre<now && pre+PI>now ) return false;
		return true;
	}
	if(now<pre && now>pre-PI) return true;
	return false;
}

bool compare(pair<int, float> start, pair<int, float> end){
	return start.second > end.second;
}

float findCos(int i){
	float x,y;
	x = v.at(i).first - v.at(s.top().first).first;
	y = v.at(i).second - v.at(s.top().first).second;
	
	return x/sqrt(pow(x,2)+pow(y,2));
}

float findAngle(int index){
	float angle = acosf(findCos(index));
	//("pre index %d index %d angle : %lf\n",s.top().first,index,angle*180/PI);
	if(v.at(index).second < v.at(s.top().first).second) angle = 2*PI-angle;
	return angle;
}

void findAns(int index){
	if(index == c.size()) return;
	int now = c.at(index).first;
	float angle = findAngle(now);
	if(now == s.top().first) {
		findAns(index+1);
		return;
	}
	
	if(s.top().second == -100) s.push(make_pair(now, angle));
	else {
		while(1){
			if(checkClock(angle)){
				if(s.top().second == -100) break;
				//printf("%d와 시계방향이라 %d삭제\n",now,s.top().first);
				s.pop();
				angle = findAngle(now);
			}
			else break;
		}
		//printf("스택에 %d %lf추가\n\n",now,angle*180/PI);
		s.push(make_pair(now, angle));
	}
	
	findAns(index+1);
	return;
}

int main() {
	int n,cnt;
	scanf("%d",&n);
	
	for(int i=0;i<n;i++){
		scanf("%d %d",&p.first, &p.second);
		v.push_back(p);
		
		if(s.empty()) s.push(make_pair(i,-100));
		else if(v.at(s.top().first).second > p.second ||
				(v.at(s.top().first).first > p.first &&
				 v.at(s.top().first).second == p.second)){
			s.pop();
			s.push(make_pair(i,-100));
		}
	}
	
	for(int i=0;i<n;i++){
		if(s.top().first == i) continue;
		c.push_back(make_pair(i,findCos(i)));
	}
	
	sort(c.begin(),c.end(),compare);
	
	//for(int i=0;i<n-1;i++) printf("%d %lf\n",c.at(i).first,c.at(i).second);
	
	findAns(0);
	for(cnt=0;!s.empty();cnt++,s.pop()) ;//printf("%d\n",s.top().first);
	printf("%d",cnt);
	return 0;
}
